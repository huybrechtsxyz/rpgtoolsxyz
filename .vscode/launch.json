  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch - New Project",
      "program": "node ${workspaceFolder}/src/app.js",
      "args": ["new", "project", "atuaro - new", "-f", "'..'"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch - New Module",
      "program": "${workspaceFolder}/src/app.js",
      "args": ["new-module", "e:/sources/atuaro - new", "gauntlet"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch - New Story",
      "program": "${workspaceFolder}/src/app.js",
      "args": ["new-story", "e:/sources/atuaro - new", "2023-dndave"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}